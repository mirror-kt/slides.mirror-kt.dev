{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>mirror-kt/renovate-config",
    "local>mirror-kt/renovate-config:pnpm-nodeversion",
    "customManagers:biomeVersions"
  ],
  "packageRules": [
    {
      "description": "slidev related packages",
      "groupName": "slidev",
      "matchManagers": ["npm"],
      "matchPackageNames": ["@slidev/*"]
    },
    {
      "description": "iconify related packages",
      "groupName": "iconify",
      "matchManagers": ["npm"],
      "matchPackageNames": ["@iconify-json/*", "@iconify/*"]
    }
  ]
}
